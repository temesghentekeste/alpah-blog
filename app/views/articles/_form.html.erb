<% if @article.errors.any? %>
    <div class="container">
    <div class="row">
    <div class="col-sm-12">
        <h2> The following errors prevented the article from being created </h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
        </ul>
        </div>
        </div>
    </div>

<% end %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@article , :html => { class: "form-horizontal", rol: "form"}) do |f| %>
            <div class="form-group">
                <%= f.label :title, class: "col-form-label" %>
                <div class="">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article",  autofocus: true  %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "col-form-label" %>
                <div class="">
                    <%= f.text_area :description,s: 10,  class: "form-control", placeholder: "Body of article" %>
                </div>
            </div>
            <div class="form-group">
                    <%= f.submit class:"btn btn-primary" %>
            </div>
        <% end %>
        <div class="col-xs-4 text-center ">
            [ <%= link_to "Cancel request and return to articles listing", articles_path, class: "text-danger"%> ]
        </div>
    </div>
</div>

