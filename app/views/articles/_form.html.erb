<%= render "shared/errors", obj: @article%>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@article , :html => { class: "form-horizontal", rol: "form"}) do |f| %>
            <div class="form-group">
                <%= f.label :title, class: "col-form-label" %>
                <div class="">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article",  autofocus: true  %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, class: "col-form-label" %>
                <div class="">
                    <%= f.text_area :description,rows: 10,  class: "form-control", placeholder: "Body of article" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                    <% cb.label(class: "checkbox-inline input_checkbox mr-4") {cb.check_box(class: "checkbox") +" #{cb.text}"} %>
                <% end %>
            </div>
            <div class="form-group">
                    <%= f.submit class:"btn btn-primary" %>
            </div>
        <% end %>
        <div class="col-xs-4 text-center ">
            [ <%= link_to "Cancel request and return to articles listing", articles_path, class: "text-info"%> ]
        </div>
    </div>
</div>

