<div class="container p-4 mt-4">
    <h1 class="text-center">Listing all articles</h1>
    <p>
        <%= link_to "Create new article", new_article_path, class: "btn btn-primary"%>
    </p>
    <table class="table">
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>

        <% @articles.each do |article| %>
            <tr>
            <td> <%= article.title %> </td>        
            <td> <%= article.description %></td>
            <td> <%= link_to "Edit", edit_article_path(article), class: "btn btn-success" %></td>
            <td> <%= link_to "Show", article_path(article), class: "btn btn-info" %></td>
            <td> <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
    </table>
</div>
