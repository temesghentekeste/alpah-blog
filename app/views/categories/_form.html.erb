<div class="container">
<%= render "shared/errors", obj: @category%>
  <div class="row">
      <div class="col-sm-8 mx-auto">
          <%= form_for(@category , :html => { class: "form-horizontal", role: "form"}) do |f| %>
              <div class="form-group">
                  <%= f.label :name, class: "col-form-label" %>
                  <div class="">
                      <%= f.text_field :name, class: "form-control", placeholder: "Category name",  autofocus: true  %>
                  </div>
              </div>
              <div class="form-group">
                      <%= f.submit class:"btn btn-primary" %>
              </div>
          <% end %>
          <div class="col-xs-4 text-center ">
              [ <%= link_to "Cancel request and return to articles listing", articles_path, class: "text-info"%> ]
          </div>
      </div>
  </div>
</div>