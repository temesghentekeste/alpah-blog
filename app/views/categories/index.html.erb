<h1 class="text-center">Listing all categories</h1>
<div class="container text-center">
<div class="d-flex justify-content-center">
  <%= will_paginate%>
</div>
  <% @categories.each do |category| %>
    <div class="row justify-content-center">
      <div class="col-6 mb-4">
        <div class="card p-4">
          <div class="article-title">
            <%= link_to category.name, category_path(category), class: "text-info"%>
          </div>
          <div class="card-footer py-2">
            <small><%= link_to pluralize(category.articles.count, "article"), category_path(category)%></small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center mb-5 mt-2">
  <%= will_paginate%>
</div>