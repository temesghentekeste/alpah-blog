<h1 class="text-center">Log in</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= form_for(:session , :html => { class: "form-horizontal", rol: "form"}, url: login_path) do |f| %>
        <div class="form-group">
            <%= f.label :email, class: "col-form-label" %>
            <div class="">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email",  autofocus: true  %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: "col-form-label" %>
            <div class="">
                <%= f.password_field :password,class: "form-control", autocomplete: "off" %>
            </div>
        </div>
        <div class="form-group">
                <%= f.submit "Log in", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
