<div class="container">
<%= render "shared/errors", obj: @user%>
  <div class="row">
      <div class="col-sm-12 mx-auto">
          <%= form_for(@user , :html => { class: "form-horizontal", role: "form"}) do |f| %>
              <div class="form-group">
                  <%= f.label :username, class: "col-form-label" %>
                  <div class="">
                      <%= f.text_field :username, class: "form-control", placeholder: "Enter username",  autofocus: true  %>
                  </div>
              </div>
              <div class="form-group">
                  <%= f.label :email, class: "col-form-label" %>
                  <div class="">
                      <%= f.email_field :email,class: "form-control", placeholder: "Enter email" %>
                  </div>
              </div>
              <div class="form-group">
                  <%= f.label :password, class: "col-form-label" %>
                  <div class="">
                      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                  </div>
              </div>
              <div class="form-group">
                      <%= f.submit(@user.new_record? ? "Sign up" : "Update account" , class:"btn btn-primary") %>
              </div>
          <% end %>
          <div class="col-xs-4 text-center ">
              [ <%= link_to "Cancel request and return to articles listing", articles_path, class: "text-info"%> ]
          </div>
      </div>
  </div>
</div>