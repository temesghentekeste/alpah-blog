<h1 class="text-center mb-4">All Alpha Bloggers</h1>
 <div class="d-flex justify-content-center m-0">
   <%= will_paginate%>
 </div>  

<div class="text-center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row justify-content-center mx-0">
        <div class="card col-8 p-3 m-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user), class: "text-info"%>
          </li>
          <li>
            <span><%= pluralize(user.articles.count, "article") if user.articles %></span>
          </li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%= link_to "Delete this user", user_path(user), method: :delete,
                              data: {confirm: "Are you sure you want to delete this user?"}              
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

</div>

 <div class="d-flex justify-content-center  my-4 mt-2">
   <%= will_paginate%>
 </div> 
