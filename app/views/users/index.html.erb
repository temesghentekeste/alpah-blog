<h1 class="text-center mb-4">All Alpha Bloggers</h1>
<div class="container">
 <div class="row justify-content-center m-0">
  <div class="col-2 mb-0">
   <%= will_paginate%>
  </div>
 </div>  
</div>

<div class="text-center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-md-4 p-3">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="card-title">
            <%= link_to user.username, user_path(user)%>
          </li>
          <li>
            <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          </li>
          <% if logged_in? and current_user.admin? %>
            <li>
              <%= link_to "Delete this user", user_path(user), method: :delete,
                              data: {confirm: "Are you sure you want to delete this user?"}              
              %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

</div>
<div class="container">
 <div class="row justify-content-center m-0">
  <div class="col-2 mb-0">
   <%= will_paginate%>
  </div>
 </div>  
</div>
