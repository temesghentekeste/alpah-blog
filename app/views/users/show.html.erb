<h1 class="text-center">Welcome to <%= @user.username%>'s page</h1>

<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto text-center my-2">
      <%= gravatar_for @user, size: 150 %>
    </div>
  </div>
</div>

<div class="container">
<h4 class="text-center mt-3"><%= @user.username%>'s articles</h4>
 <div class="row justify-content-center mt-3">
  <div class="col-2 mb-0">
   <%= will_paginate @user_articles%>
  </div>
 </div>  
<%= render 'articles/article', obj: @user_articles %>
<div class="row justify-content-center m-3 mb-5">
  <div class="col-2 mb-0">
   <%= will_paginate @user_articles%>
  </div>
 </div>  
</div>